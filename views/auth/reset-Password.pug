extends ../layout/index

block content
    div.flex.justify-center.items-center
        div.py-9   
            div.flex.items-center
                h1.text-center.text-4xl.my-10.font-extrabold.text-dark Bienes
                    span.font-normal.text-secondary Raices
                img(src="/assets/logo.png", alt="a", class="ml-5" width="75px" heigh="75px") 
    div 
        h2.text-center.text-3xl.font-extrabold.text-secondary= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="new_password") Ingresa tu nueva contraseña:
                        input#new_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="mínimo de 6 carácteres" type="password" name="new_password") 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="confirm_new_password") Ingresa tu nueva contraseña:
                        input#confirm_new_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="deberá coincidir con la anterior" type="password" name="confirm_new_password") 

                    input(class="w-full bg-dark hover:bg-accent text-secondary font-bold py-3 cursor-pointer transition-all duration-300 transform hover:scale-105" type="submit" value="Actualizar Contraseña")
    footer.bg-dark.py-2.mt-10.mb-5
        .container.mx-auto.text-center.text-white
            p.text-sm
                | &copy; 2024 Bienes Raices. Todos los derechos reservados.
            div.mt-6
                a(class="text-white hover:text-accent mr-6" href="") Términos de uso
                a(class="text-white hover:text-accent" href="") Política de privacidad    